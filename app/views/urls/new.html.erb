<h1>add a new URL</h1>
<%= form_for @shortened_url do |form| %>

<p>
   <%= form.label :url, "your URL:" %>
   <%= form.text_field :url %>
</p>

<% if @shortened_url.errors.any? %>
<p class='error-messages'>
   <%= @shortened_url.errors.full_messages %>.
</p>
<% end %>

<p class='buttons'>
   <%= form.submit "Shorten my URL" %>
</p>

<% end %>

