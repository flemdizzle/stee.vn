/* GLOBAL STYLES
-------------------------------------------------- */
/* Padding below the footer and lighter body text */

body {
  padding-bottom: 40px;
  color: #5a5a5a;
}




/* CUSTOMIZE THE NAVBAR
-------------------------------------------------- */

/* Special class on .container surrounding .navbar, used for positioning it into place. */
.navbar-wrapper {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  z-index: 20;
}

/* Flip around the padding for proper display in narrow viewports */
.navbar-wrapper > .container {
  padding-right: 0;
  padding-left: 0;
}
.navbar-wrapper .navbar {
  padding-right: 15px;
  padding-left: 15px;
}
.navbar-wrapper .navbar .container {
  width: auto;
}


/* CUSTOMIZE THE CAROUSEL
-------------------------------------------------- */

/* Carousel base class */
.carousel {
  height: 500px;
  margin-bottom: 60px;
}
/* Since positioning the image, we need to help out the caption */
.carousel-caption {
  z-index: 10;
  margin: 200px auto;
  position: absolute;
  text-align:center;
}

/* Declare heights because of positioning of img element */

.carousel .item {
  height: 725px;
  background-color: gray;
  /*background-image: url(<%= asset_path 'background.png' %>);*/
  background-size: cover;
  background-position: center;
}
.carousel-inner > .item > img {
  position: absolute;
  top: 0;
  left: 0;
  min-width: 100%;
  height: 100%;
}

.steven {
  font-size: 90px;
}

/* MARKETING CONTENT
-------------------------------------------------- */

/* Center align the text within the three columns below the carousel */
.marketing .col-lg-4 {
  margin-bottom: 20px;
  text-align: center;
}
.marketing h2 {
  font-weight: normal;
}
.marketing .col-lg-4 p {
  margin-right: 10px;
  margin-left: 10px;
}
.row {
  padding-top: 100px;
}

#skills {
  padding-top: -25px;
}

#about {
  padding-bottom: 50px;
}

.project {
  border: 2px solid;
  color: gray;
}

/* Featurettes
------------------------- */

.featurette-divider {
  margin: 80px 0; /* Space out the Bootstrap <hr> more */
}

/* Thin out the marketing headings */
.featurette-heading {
  font-weight: 300;
  line-height: 1;
  letter-spacing: -1px;
  font-size: 50px;
}

.skills{
  font-size: 50px;
  font-weight: 300;
  line-height: 1;
  letter-spacing: -1px;
  text-align: center;
}



/* RESPONSIVE CSS
-------------------------------------------------- */

@media (max-width: 768px) {

  /* Navbar positioning foo */
  .navbar-wrapper {
    margin-top: 20px;
  }
  .navbar-wrapper .container {
    padding-right: 15px;
    padding-left: 15px;
  }
  .navbar-wrapper .navbar {
    padding-right: 0;
    padding-left: 0;
  }

  .carousel .item {
    height: 550px;
  }
  /*Make about me image resize to smaller static size*/

  /* Bump up size of carousel content */
  .carousel-caption {
    margin-bottom: 35px;
    font-size: 21px;
    line-height: 1.4;
  }
  .steven {
    font-size: 50px;
  }
  .featurette-heading {
    font-size: 50px;
  }
  .move{
    display: flex;
    flex-wrap: wrap;
  }
  .one{
    order: 2;
  }
  .two{
    order: 1;
  }
}
